{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "border": true,
  "border_width": 6,
  "border_offset": -1,
  "border_colours": {
    "single": "#42a5f5",
    "stack": "#00a542",
    "monocle": "#ff3399",
    "unfocused": "#808080"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#00a542",
      "unfocused_text": "#b3b3b3",
      "background": "#141414"
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "workspace_padding": 60,
          "name": "I",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "II",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "III",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "IV",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "V",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "VI",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "VII",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "VIII",
          "layout": "BSP"
        },
        {
          "workspace_padding": 60,
          "name": "IX",
          "layout": "BSP"
        }
      ]
    }
  ]
}
