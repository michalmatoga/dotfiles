{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-latte",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "{env:OPENCODE_MODEL}"
    },
    "plan": {
      "mode": "primary",
      "model": "{env:OPENCODE_MODEL}",
      "tools": { "edit": true },
      "permission": { "edit": "ask" }
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "{env:OPENCODE_MODEL}",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  },
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM",
      "options": {
        "baseURL": "https://litellm.pct-ai-foundations-pro-1.eks.schibsted.io/v1"
      },
      "models": {
        "openai/gpt-5.2-codex": {
          "name": "GPT-5.2 Codex (LiteLLM)"
        },
        "bedrock-claude-opus-4-5": {
          "name": "Claude Opus 4.5 (Bedrock)"
        }
      }
    },
    "openai": {
      "npm": "@ai-sdk/openai",
      "name": "OpenAI",
      "models": {
        "gpt-5.2-codex": {
          "name": "GPT-5.2 Codex (OpenAI)"
        }
      }
    },
    "copilot-ghe": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "GitHub Copilot (GHE)",
      "options": {
        "baseURL": "https://copilot-api.schibsted.ghe.com",
        "headers": {
          "Editor-Version": "vscode/1.85.0",
          "Editor-Plugin-Version": "copilot-chat/0.12.0"
        }
      },
      "models": {
        "claude-opus-4.6": {
          "name": "Claude Opus 4.6 (Copilot)"
        },
        "gpt-5": {
          "name": "GPT-5 (Copilot)"
        },
        "gpt-5-mini": {
          "name": "GPT-5 Mini (Copilot)"
        },
        "claude-sonnet-4": {
          "name": "Claude Sonnet 4 (Copilot)"
        },
        "claude-haiku-4.5": {
          "name": "Claude Haiku 4.5 (Copilot)"
        },
        "gpt-4o": {
          "name": "GPT-4o (Copilot)"
        }
      }
    }
  }
}
